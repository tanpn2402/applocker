<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>

            <solid android:color="@color/button_selector_press"/>
            <corners android:radius="4dp"/>

        </shape>
    </item>

    <item
        android:state_pressed="false">
        <shape>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>

            <solid android:color="@color/button_selector_normal"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item
        android:state_selected="true">
        <shape>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>

            <solid android:color="@color/button_selector_press"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

</selector>