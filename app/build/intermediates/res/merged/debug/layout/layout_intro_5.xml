<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95a5a6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuối cùng, hãy chọn màn hình khóa và mật khẩu để khóa ứng dụng bạn có thể thay đổi mật khâu và kiểu khóa trong phần cài đặt"
            android:gravity="center"
            android:textColor="#dddddd"
            android:layout_gravity="bottom|center"
            android:maxEms="18"
            android:textSize="25dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="56dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:id="@+id/btnPasswordLock"
            android:background="@drawable/button_signup"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pattern"
            android:id="@+id/btnPatternLock"
            android:background="@drawable/button_signup"
            android:layout_below="@+id/btnPasswordLock"
            android:layout_alignRight="@+id/btnPasswordLock"
            android:layout_alignEnd="@+id/btnPasswordLock"
            android:layout_alignLeft="@+id/btnPasswordLock"
            android:layout_alignStart="@+id/btnPasswordLock"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</FrameLayout>